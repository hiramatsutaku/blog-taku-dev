{
  "name": "blog-taku-dev",
  "description": "my personal blog",
  "private": true,
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "deploy:stg": "npx now --prod -n $STG_NOW_PROJECT_NAME -b CONTENTFUL_SPACE_ID=$CONTENTFUL_SPACE_ID -b CONTENTFUL_PREVIEW_ACCESS_TOKEN=$CONTENTFUL_PREVIEW_ACCESS_TOKEN",
    "deploy:prod": "npx now --prod -n $NOW_PROJECT_NAME -b CONTENTFUL_SPACE_ID=$CONTENTFUL_SPACE_ID -b CONTENTFUL_ACCESS_TOKEN=$CONTENTFUL_ACCESS_TOKEN",
    "analyze": "cross-env ANALYZE=true next build",
    "analyze:server": "cross-env BUNDLE_ANALYZE=server next build",
    "analyze:browser": "cross-env BUNDLE_ANALYZE=browser next build",
    "storybook:dev": "start-storybook",
    "storybook:build": "build-storybook -c .storybook",
    "lint": "npm-run-all -p lint:*",
    "lint:es": "eslint . --ext .js,.ts,.tsx --cache",
    "lint:style": "stylelint \"src/**/*.tsx\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "contentful": "^7.13.1",
    "next": "^9.1.7",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-markdown": "^4.3.1",
    "styled-components": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@next/bundle-analyzer": "^9.1.7",
    "@storybook/react": "^5.3.5",
    "@types/node": "^13.1.7",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.2",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.6",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-standard": "^19.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.7.4"
  }
}
